version: '3.9'

services:
  bd:
    image: postgres
    container_name: my_postgres
    environment:
      POSTGRES_PASSWORD: 12345
    ports:
      - "5432:5432"
    volumes:
      - ./postgres/:/var/lib/postgresql/data
  apache:
    image: httpd:latest
    container_name: my-apache-app
    ports:
      - '8082:80'
    volumes:
      - ./web/Sauron-main/:/usr/local/apache2/htdocs
